<!DOCTYPE html>

  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.1/css/all.css" integrity="sha384-vp86vTRFVJgpjF9jiIGPEEqYqlDwgyBgEF109VFjmqGmIY/Y4HV4d3Gp2irVfcrp" crossorigin="anonymous">
  </head>

<body>
 <div class="container">
  <div class="row">
    <div class="col-md-12">
      <header class="navbar navbar-fixed-top navbar-inverse">
        <div class="headline">
          <span class="text-muted"><h1>Bookers</h1></span>
        </div>
             <nav>
                <ul class="nav-list">
                 <% if user_signed_in? %>
                 <%= form_tag(search_path, method: :get) do %>
　           　<%= select_tag 'range' ,options_for_select([['---選択してください---', ''], ['User', '1'], ['Book', '2']]) %>
   　         　<%= select_tag 'search', options_for_select([["前方一致","forward_match"], ["後方一致","backward_match"], ["完全一致","perfect_match"], ["部分一致","partial_match"]]) %>
   　         　<%= text_field_tag (:word) %>
            　　<%= submit_tag "検索" %>
               <% end %>
             
                  <li class="nav-list-item">
                     <span class="glyphicon glyphicon-home" aria-hidden="true">
                      <%= link_to 'Home', user_path(current_user.id) %>
                     </span>
                  </li>
                  <li class="nav-list-item">
                     <span class="glyphicon glyphicon-user" aria-hidden="true">
                      <%= link_to 'Users', users_path %>
                     </span>
                  </li>
                  <li class="nav-list-item">
                     <span class="glyphicon glyphicon-book" aria-hidden="true">
                       <%= link_to 'Books', books_path %>
                     </span>
                  </li>
               <li class="nav-list-item">
                 <span class="glyphicon glyphicon-log-out" aria-hidden="true">
                   <%= link_to "Logout", destroy_user_session_path, method: :delete %>
                 </span>
               </li>
               </ul
               </nav>
              
              
               
              <% else %>
              <nav>
                <ul class="nav-list">
               <li class="nav-list-item">
                     <span class="glyphicon glyphicon-home" aria-hidden="true">
                      <%= link_to 'Home', root_path %>
                     </span>
               </li>

                <li class="nav-list-item">

                     <span class="glyphicon glyphicon-link" aria-hidden="true">
                      <%= link_to 'About', home_about_path %>
                     </span>
                  </li>

                <li class="nav-list-item">
                 <span class="glyphicon glyphicon-edit" aria-hidden="true">
                   <%= link_to "sign up", new_user_registration_path %>
                 </span>
               </li>

               <li class="nav-list-item">
                 <span class="glyphicon glyphicon-log-in" aria-hidden="true">
                   <%= link_to "login", new_user_session_path %>
                </span>
               </li>
               </ul>
              </nav>

             <% end %>
             </ul>
           </nav>
           </div>
          </div>
          </nav>
        </header>
      </div>
    </div>
 </div>




    <!-- main -->


   <%= yield %>

    <!-- footer -->
    <footer>
      <div class="footer-text" >
        CopyRight Infratop.inc
      </div>
    </footer>

  </body>
</html>



